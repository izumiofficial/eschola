<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_admission_tree" model="ir.ui.view">
            <field name="name">admission.tree</field>
            <field name="model">admission</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Admission">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="child_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>
        <record id="view_admission_form" model="ir.ui.view">
            <field name="name">admission.form</field>
            <field name="model">admission</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Admission">
                    <header>
                        <button string="Admission Confirm" class="oe_highlight" invisible="status != 'confirm'"
                                type="object"
                                name="approve_admission"/>
                        <field name="status" widget="statusbar" nolabel="1" readonly="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" placeholder="Guardian Name"/>
                                <field name="email"/>
                            </group>
                            <group>
                                <field name="mobile"/>
                                <field name="country" readonly="1"/>
                            </group>
                        </group>
                        <separator colspan="4" string="Student(s)"/>
                        <field name="child_ids" readonly="1"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>
        <!--    below are the menu item declaration-->
        <record id="action_admission" model="ir.actions.act_window">
            <field name="name">Admission</field>
            <field name="res_model">admission</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Start Admission!
                </p>
            </field>
        </record>

        <menuitem
                id="admission"
                name="Admission"
                parent="admission_root"
                action="action_admission"
                sequence="1"
        />
    </data>
</odoo>