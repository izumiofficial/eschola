<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="partner_extra_fields" model="ir.ui.view">
        <field name="name">partner_extra_fields</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="company_type" position="replace">
                <div>
                    <field name="company_type" widget="radio" options="{'horizontal': true}"/>
                    <field name="is_parent" class="ml16"/>
                    <label for="is_parent" class="mr16"/>
                    <field name="is_student"/>
                    <label for="is_student"/>
                </div>
            </field>
            <xpath expr="//field[@name='vat']" position="after">
                <field name="gender" invisible="is_company"/>
                <field name="std_created" invisible="1"/>
                <field name="gdn_created" invisible="1"/>
                <field name="contact_type" invisible="is_student"/>
            </xpath>
            <xpath expr="//form/sheet" position="before">
                <header>
                    <button string="Create Student" class="oe_highlight" type="object" name="action_create_student" invisible="std_created or is_parent"/>
                    <button string="Create Guardian" class="oe_highlight" type="object" name="action_create_guardian" invisible="gdn_created or is_student"/>
                </header>
            </xpath>
        </field>
    </record>
</odoo>