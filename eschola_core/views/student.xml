<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="kanban_view_student" model="ir.ui.view">
            <field name="name">Student Kanban</field>
            <field name="model">student</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click o_res_partner_kanban">
                                <a type="open">
                                    <div class="o_kanban_image" style="background:#e6e5e6;">
                                        <img src="/base/static/img/avatar.png" alt="Student"/>
                                    </div>
                                    <div class="oe_kanban_details">
                                        <h4>
                                            <field name="name"/>
                                        </h4>
                                        <ul>
                                            <li t-if="record.gender.raw_value">
                                                <field name="gender"/>
                                            </li>
                                            <li t-if="record.mobile.raw_value">
                                                <field name="mobile"/>
                                            </li>
                                            <li t-if="record.email.raw_value">
                                                <a t-attf-href="mailto:#{record.email.value}">
                                                    <field name="email"/>
                                                </a>
                                            </li>
                                            <li t-if="record.grade.raw_value">
                                                <field name="student_grade"/>
                                            </li>
                                            <li t-if="record.nationality.raw_value">
                                                <field name="nationality"/>
                                            </li>
                                        </ul>
                                    </div>
                                </a>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="view_student_tree" model="ir.ui.view">
            <field name="name">student.tree</field>
            <field name="model">student</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Student">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="birth_date"/>
                    <field name="gender"/>
                    <field name="grade" optional="hide"/>
                    <field name="student_grade"/>
                </tree>
            </field>
        </record>
        <record id="view_student_form" model="ir.ui.view">
            <field name="name">student.form</field>
            <field name="model">student</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Student">
                    <header>
                        <button string="Create User" class="oe_highlight"
                                type="object"
                                name="create_contact"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_course"
                                    string="courses" type="object"
                                    icon="fa-university" class="oe_stat_button">
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Student Name"/>
                            </h1>
                        </div>
                        <group string="Guardian(s)">
                            <field name="primary_guardian_id"/>
                            <field name="secondary_guardian_id"/>
                        </group>
                        <group string="Student Details">
                            <group>
                                <field name="partner_id" readonly="1"/>
                                <field name="student_grade"/>
                                <field name="grade" invisible="1"/>
                                <field name="nationality"/>
                                <field name="country"/>
                                <field name="religion"/>
                            </group>
                            <group>
                                <field name="email"/>
                                <field name="mobile"/>
                                <field name="birth_date"/>
                                <field name="gender"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_student_search" model="ir.ui.view">
            <field name="name">student.search</field>
            <field name="model">student</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Student">
                    <field name="name"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter name="grade" string="Grade"
                                domain="[]" context="{'group_by':'grade'}"/>
                        <filter name="nationality" string="Nationality"
                                domain="[]" context="{'group_by':'nationality'}"/>
                        <filter name="gender" string="Gender"
                                domain="[]" context="{'group_by':'gender'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!--    below are the menu item declaration-->
        <record id="action_student" model="ir.actions.act_window">
            <field name="name">Student</field>
            <field name="res_model">student</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add student!
                </p>
            </field>
        </record>

        <menuitem
                id="student"
                name="Student"
                parent="student_root"
                action="action_student"
                sequence="1"
        />
    </data>
</odoo>