<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_admission_tree" model="ir.ui.view">
            <field name="name">admission.tree</field>
            <field name="model">admission</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Registered">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="grade"/>
                </tree>
            </field>
        </record>
        <record id="view_admission_form" model="ir.ui.view">
            <field name="name">admission.form</field>
            <field name="model">admission</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Register">
                    <header>
                        <!--                        <button string="Confirm" class="oe_highlight" invisible="status != 'confirm'"-->
                        <!--                                type="object"-->
                        <!--                                name="approve_admission"/>-->
                        <field name="status" widget="statusbar" nolabel="1" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Student Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="grade"/>
                                <field name="email"/>
                            </group>
                            <group>
                                <field name="mobile"/>
                                <field name="country" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>
        <!--    below are the menu item declaration-->
        <record id="action_admission" model="ir.actions.act_window">
            <field name="name">Admission</field>
            <field name="res_model">admission</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Start Admission!
                </p>
            </field>
        </record>

        <menuitem
                id="admission"
                name="Admission"
                parent="admission_root"
                action="action_admission"
                sequence="1"
        />

    </data>
</odoo>