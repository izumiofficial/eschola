<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="register_form" model="website.menu">
        <field name="name">Register Form</field>
        <field name="url">/register_form</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">100</field>
    </record>
    <template id="register_form_template" name="Register Form">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>
        <t t-call="website.layout">
            <div class="container">
                <h1>Admission Form</h1>
                <form action="/submit_form" method="POST">
                    <div id="register_template_form" class="register_template_form">
                        <div class="form-row row">
                            <div class="col-md-3 mb-3">
                                <label for="guardian_name">Guardian Name</label>
                                <input type="text" class="form-control" id="guardian_name" name="guardian_name"
                                       required="True"/>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="email" class="">Email</label>
                                <input type="email" class="form-control" id="email" name="email" required="True"/>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="mobile" class="">Mobile</label>
                                <input type="text" class="form-control" id="mobile" name="mobile" required="True"/>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="country" class="">Country</label>
                                <select class="form-control" id="country" name="country" required="True">
                                    <option>Select Country</option>
                                    <t t-foreach="countries or []" t-as="country">
                                        <option t-att-value="country.id">
                                            <t t-esc="country.name"/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                Child Information
                            </div>
                            <div class="card-body">
                                <div class="form-row row">
                                    <div class="col-md-4 mb-3">
                                        <label for="validationCustom01">Name</label>
                                        <input type="text" class="form-control" id="name" name="name"/>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="validationCustom02">Gender</label>
                                        <select class="form-control" id="gender" name="gender">
                                            <option>Select Gender...</option>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="validationCustomUsername">Email</label>
                                        <input type="text" class="form-control" id="email" name="email"/>
                                    </div>
                                </div>
                                <div class="form-row row">
                                    <div class="col-md-4 mb-3">
                                        <label for="validationCustom01">Mobile</label>
                                        <input type="text" class="form-control" id="mobile" name="mobile"/>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="validationCustom02">Year</label>
                                        <select class="form-control" id="grade" name="grade">
                                            <option value="Grade 7">Grade 7</option>
                                            <option value="Grade 8">Grade 8</option>
                                            <option value="Grade 9">Grade 9</option>
                                            <option value="Grade 10">Grade 10</option>
                                            <option value="AL/AS">AL/AS</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="validationCustomUsername">Religion</label>
                                        <select class="form-control" id="religion" name="religion">
                                            <option>Select Religion...</option>
                                            <option value="Muslim">Muslim</option>
                                            <option value="Christian">Christian</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <!--                            <div class="card-footer d-flex justify-content-end" style="gap: 10px;">-->
                            <!--                                <button type="button" class="btn btn-primary add_line">-->
                            <!--                                    <i class="bi bi-plus"></i>-->
                            <!--                                </button>-->
                            <!--                            </div>-->
                        </div>

                        <!--new cloned card-->
                        <div class="card add_extra_card mt-2 d-none" id="cloned_row">
                            <div class="card-header">
                                Child Information
                            </div>
                            <div class="card-body">
                                <div class="form-row row">
                                    <div class="col-md-4 mb-3">
                                        <label for="validationCustom01">Name</label>
                                        <input type="text" class="form-control" id="name" name="name"/>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="validationCustom02">Gender</label>
                                        <select class="form-control" id="gender" name="gender">
                                            <option>Select Gender...</option>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="validationCustomUsername">Email</label>
                                        <input type="text" class="form-control" id="email" name="email"/>
                                    </div>
                                </div>
                                <div class="form-row row">
                                    <div class="col-md-4 mb-3">
                                        <label for="validationCustom01">Mobile</label>
                                        <input type="text" class="form-control" id="mobile" name="mobile"/>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="validationCustom02">Year</label>
                                        <select class="form-control" id="grade" name="grade">
                                            <option value="Grade 7">Grade 7</option>
                                            <option value="Grade 8">Grade 8</option>
                                            <option value="Grade 9">Grade 9</option>
                                            <option value="Grade 10">Grade 10</option>
                                            <option value="AL/AS">AL/AS</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="validationCustomUsername">Religion</label>
                                        <select class="form-control" id="religion" name="religion">
                                            <option>Select Religion...</option>
                                            <option value="Muslim">Muslim</option>
                                            <option value="Christian">Christian</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-end" style="gap: 10px;">
                                <!--                                <button type="button" class="btn btn-primary add_line">-->
                                <!--                                    <i class="bi bi-plus"></i>-->
                                <!--                                </button>-->
                                <button type="button" class="btn btn-danger remove_line">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                        <textarea class="form-control" id="student_line_ids" name="student_line_ids" rows="3"></textarea>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="mt-2 mb-5 btn btn-secondary create_record">Submit</button>
                            <button type="button" class="mt-2 mb-5 btn btn-primary add_line">
                                <i class="bi bi-plus"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </t>
    </template>
</odoo>